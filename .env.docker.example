# =============================================================================
# Ambiente Docker (EXEMPLO) - Agenda de Musicos
# Copie para .env.docker e preencha os valores reais
# =============================================================================

# =============================================================================
# PostgreSQL (container db)
# =============================================================================
POSTGRES_DB=agenda
POSTGRES_USER=agenda
POSTGRES_PASSWORD=SUA_SENHA_AQUI

# =============================================================================
# Backend Django
# =============================================================================
SECRET_KEY=django-insecure-substitua-por-uma-chave-forte
DEBUG=False
ENABLE_API_DOCS=False
COOKIE_SECURE=True
ALLOWED_HOSTS=localhost,127.0.0.1,gigflowagenda.com.br,www.gigflowagenda.com.br
ADMIN_URL=admin-secret-gerado
DATABASE_URL=postgresql://agenda:SUA_SENHA_AQUI@db:5432/agenda?sslmode=disable
REDIS_URL=redis://redis:6379/1

# CORS/CSRF
CORS_ALLOWED_ORIGINS=https://gigflowagenda.com.br,https://www.gigflowagenda.com.br
CORS_ALLOW_CREDENTIALS=True
CSRF_TRUSTED_ORIGINS=https://gigflowagenda.com.br,https://www.gigflowagenda.com.br

# CSP (ajuste conforme necessario)
CSP_HEADER=default-src 'self'; img-src 'self' data: https:; script-src 'self' 'nonce-{nonce}'; style-src 'self'; connect-src 'self'

# OAuth (Google)
GOOGLE_CLIENT_ID=SEU_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=SEU_GOOGLE_CLIENT_SECRET

# URL do frontend (links de verificacao/convites)
FRONTEND_URL=https://gigflowagenda.com.br

# Email SMTP
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=seu-email@gmail.com
EMAIL_HOST_PASSWORD=SUA_APP_PASSWORD
DEFAULT_FROM_EMAIL=Agenda Musicos <seu-email@gmail.com>

# =============================================================================
# Frontend Vite (build)
# =============================================================================
VITE_API_URL=/api
VITE_GOOGLE_CLIENT_ID=SEU_GOOGLE_CLIENT_ID

# =============================================================================
# Telegram (opcional)
# =============================================================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_BOT_USERNAME=
TELEGRAM_WEBHOOK_SECRET=

# Emails admin (opcional)
ADMIN_EMAILS=
