SECRET_KEY=django-insecure-$(python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())")
DEBUG=True
ENABLE_API_DOCS=True
COOKIE_SECURE=False
ALLOWED_HOSTS=localhost,127.0.0.1

# Admin URL protegida (gerar uma URL única e secreta)
# Exemplo: ADMIN_URL=admin-abc123xyz
ADMIN_URL=admin-secret-$(python -c "import secrets; print(secrets.token_urlsafe(16))")

# Database - escolha uma das opções:
# SQLite (desenvolvimento local simples)
DATABASE_URL=sqlite:///db.sqlite3
# PostgreSQL (recomendado para produção)
# DATABASE_URL=postgresql://user:password@localhost:5432/agenda_musicos

# Cache (Redis)
# Exemplo: REDIS_URL=redis://localhost:6379/1
REDIS_URL=

CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
CORS_ALLOW_CREDENTIALS=True
CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
CSP_HEADER=default-src 'self'; img-src 'self' data: https:; script-src 'self' 'nonce-{nonce}'; style-src 'self'; connect-src 'self'

# Email (Gmail SMTP com App Password)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=seu-email@gmail.com
EMAIL_HOST_PASSWORD=sua-app-password
DEFAULT_FROM_EMAIL=Agenda Musicos <seu-email@gmail.com>

# Google OAuth (opcional)
# Obter em: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-oauth-client-id

# URL do frontend para links de verificação e convites
FRONTEND_URL=http://localhost:5173
